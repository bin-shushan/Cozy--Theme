    {# Customer Service #}
    <div class="footer-column">
        <h3 class="footer-title">{{ trans('common.customer_service') }}</h3>
        <ul class="footer-links">
            <li><a href="{{ link('customer.profile') }}">{{ trans('pages.profile.title') }}</a></li>
            <li><a href="{{ link('customer.orders') }}">{{ trans('pages.orders') }}</a></li>
            <li><a href="{{ link('pages.privacy') }}">{{ trans('pages.privacy') }}</a></li>
            <li><a href="{{ link('pages.terms') }}">{{ trans('pages.terms') }}</a></li>
        </ul>
    </div>
    
    {# Newsletter #}
    <div class="footer-column">
        <h3 class="footer-title">{{ trans('common.newsletter') }}</h3>
        <p>{{ trans('common.newsletter_text') }}</p>
        <salla-newsletter-form></salla-newsletter-form>
    </div>
</div>


