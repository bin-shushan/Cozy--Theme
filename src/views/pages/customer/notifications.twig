{% extends "layouts/master" %}

{% block content %}
<div class="page-customer-notifications">
    <div class="container">
        {# Page Header #}
        <div class="page-header">
            <h1 class="page-title">{{ trans('pages.profile.notifications') }}</h1>
        </div>

        {# Notifications Content #}
        <div class="notifications-content">
            {# Empty Notifications #}
            <div class="empty-notifications" style="display: none;">
                <salla-icon name="bell" size="64"></salla-icon>
                <h2>{{ trans('pages.notifications.empty') }}</h2>
                <p>{{ trans('pages.notifications.empty_message') }}</p>
            </div>

            {# Notifications List #}
            <salla-notifications-list></salla-notifications-list>
        </div>
    </div>
</div>
{% endblock %}


